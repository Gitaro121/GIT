   <script>
      feather.replace();

      // Fungsi untuk menampilkan konten HOME
      function tampilkanHome() {
         document.getElementById('konten-home').style.display = 'block';
         document.getElementById('konten-layanan').style.display = 'none';
         document.getElementById('konten-profile').style.display = 'none';
         document.getElementById('konten-contact').style.display = 'none';
      }

      // Fungsi untuk menampilkan konten Layanan
      function tampilkanLayanan() {
         document.getElementById('konten-home').style.display = 'none';
         document.getElementById('konten-layanan').style.display = 'block';
         document.getElementById('konten-profile').style.display = 'none';
         document.getElementById('konten-contact').style.display = 'none';
      }

      // Fungsi untuk menampilkan konten Profile
      function tampilkanProfile() {
         document.getElementById('konten-home').style.display = 'none';
         document.getElementById('konten-layanan').style.display = 'none';
         document.getElementById('konten-profile').style.display = 'block';
         document.getElementById('konten-contact').style.display = 'none';
      }

      // Fungsi untuk menampilkan konten Contact
      function tampilkanContact() {
         document.getElementById('konten-home').style.display = 'none';
         document.getElementById('konten-layanan').style.display = 'none';
         document.getElementById('konten-profile').style.display = 'none';
         document.getElementById('konten-contact').style.display = 'block';
      }
   </script>
